# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# Python standard indentation
[*.py]
indent_style = space
indent_size = 4

# JS/TS standard indentation
[*.js,*.ts,*.tsx,*.jsx,*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.nix]
indent_style = space
indent_size = 2
